      <% if(data[0]!=null)  { console.log(data) %>
        <nav class="" aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                <% if(parseInt(current)!=1) { %>
                    <li class="page-item"><a class="page-link" href="/dashboard?page=<%= parseInt(current) - 1 %>">Previous</a></li>
                    <li class="page-item"><a class="page-link" href="/dashboard?page=<%= parseInt(current) -1 %>"><%= parseInt(current) - 1  %></a></li>
                <% } %>
                    <li class="page-item active"><a class="page-link" href="/dashboard?page=<%= parseInt(current)%>"><%= parseInt(current)  %></a></li>
                    <% if(parseInt(current)!=pages) { %>
                    <li class="page-item"><a class="page-link" href="/dashboard?page=<%= parseInt(current) + 1 %>"><%= parseInt(current) + 1  %></a></li>
                <% if(parseInt(current)==1 && parseInt(current) + 2 <= pages) { %>
                    <li class="page-item"><a class="page-link" href="/dashboard?page=<%= parseInt(current) + 2 %>"><%= parseInt(current) + 2  %></a></li>
                <% } %>
                <li class="page-item"><a class="page-link" href="/dashboard?page=<%= parseInt(current) + 1 %>">Next</a></li>
                <% } %>
            </ul>
        </nav>
        <% } %>

